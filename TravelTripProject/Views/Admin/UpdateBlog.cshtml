@model TravelTripProject.Models.Classes.Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Update the Post</h2>
<br />

<form class="form-group" method="post">
    @Html.HiddenFor(a => a.Id)
    @Html.LabelFor(a => a.Title)
    @Html.TextBoxFor(a => a.Title, new { @class = "form-control" })
    <br />
    @Html.LabelFor(a => a.Date)
    @Html.TextBoxFor(a => a.Date, new { @class = "form-control" })
    <br />
    @Html.LabelFor(a => a.ImageUrl)
    @Html.TextBoxFor(a => a.ImageUrl, new { @class = "form-control" })
    <br />
    @Html.LabelFor(a => a.Description)
    @Html.TextAreaFor(a => a.Description,15,1, new { @class = "form-control" })
    <br />
    <button type="submit" class="btn btn-warning">Update</button>
    </form>


