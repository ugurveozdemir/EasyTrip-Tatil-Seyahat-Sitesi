@using TravelTripProject.Models.Classes;
@model List<Blog>

<div class="padding">
    <h4>Most Populer 10 Blogs </h4>
    <ul class="list list-pad">
        @{ 
                var x = 1;
                foreach(var item in Model)
                {
                <li class="list-bg"><span> @x </span><a href="/Blog/BlogDetails/@item.Id">@item.Title</a></li>
                x = x + 1;
            }
           

            }   
        
    </ul>
    <a href="/Blog" class="link1">See all blogs</a>
</div>
