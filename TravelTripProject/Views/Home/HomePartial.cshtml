@using TravelTripProject.Models.Classes;
@model List<Blog>

<div class="con-bot">
    @foreach(var item in Model)
            {
                    <div class="left">
                        <div class="bot-left">
                            <img src="@item.ImageUrl" alt="" />
                        </div>
                        <div class="left-text">
                            <h4>@item.Title</h4>
                            <span class="doller">@item.Date.ToString("dd.MM.yyyy")</span>
                            <p>@item.Description.Substring(0,80)...</p>
                            <p><a href="~/Blog/BlogDetails/@item.Id"><span class="read">Read More >></span></a></p>
                        </div>
                    </div>
            }
    
 
        @Html.Action("HomePartial2", "Home")
    <div class="clear"></div>
</div>
