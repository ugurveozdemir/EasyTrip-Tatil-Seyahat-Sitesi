@using TravelTripProject.Models.Classes;
@model Blog



    <div class="right">
        <div class="bot-left">
            <img src="@Model.ImageUrl" alt="" />
        </div>
        <div class="left-text">

            <h4>@Model.Title</h4>
            <span class="doller">@Model.Date.ToString("dd.MM.yyyy")</span>
            <p>@Model.Description.Substring(0,80)...</p>
            <p><a href="/Blog/BlogDetails/@Model.Id"><span class="read">Read More >></span></a></p>
        </div>
    </div>


